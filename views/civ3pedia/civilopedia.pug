extends ../base.pug

block title
  title Civilopedia

block styles
  link(rel="stylesheet", type="text/css" href="/style/civ3pedia/civilopedia.css")

block main
  div#civilopedia
    block covers
    div#background
    div#title CIVILOPEDIA
    div#bigimg(style=`background-image: url("/img/icons/${image}.bmp");`)
    div#header #{header}
    a#backarrow(href='javascript:history.back()')
    a#forwardarrow(href='javascript:history.forward()')
    if more
      a#descbox(href=`${moreLink}`) #{more}
    div#menu
      a#uparrow(href=`${uplink}`)
      a#leftarrow(href=`${leftlink}`)
      a#rightarrow(href=`${rightlink}`)
      div#letters
        each letter in "abcdefghijklmnopqrstuvwxyz".split('')
          a(href=`${letterlink}#${letter.toUpperCase()}`) #{letter.toUpperCase()}
    div#content
      block content
      each item in menu
        a.link(href=`${item.path}`, id=`${item.name.includes('The ') ? item.name[4] : item.name[0]}`)
          img(src=`/img/icons/${item.image}.bmp`, style=`border: 2px solid ${item.bordercolor};`)
          span!= item.name
      p#text!= text
