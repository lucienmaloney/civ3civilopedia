extends civilopedia.pug

block styles
  link(rel="stylesheet", type="text/css", href="/style/improvement.css")

block content
  div#requires.bigtext REQUIRES
  div#advancetext.smalltext Advances
  div#resourcetext.smalltext Resources
  div#box.container
    if data['Required Government']
      div
        span Required Government:
        a &nbsp;#{data['Required Government']}
    div
      span Cost: #{data.Cost}
      div.shield
    div
     span Maintenance: #{data.Maintenance}
     div.wealth
    if data.Culture
      div
        span Culture per turn: #{data.Culture}
        div.culture
    if data.Obsolete
      div
        span Made Obsolete By:
        a &nbsp;#{data.Obsolete}
  div#advance.container
    each item in advances
      a.bottomlink(href=`${item.path}`)
        img(src=`/img/icons/${item.image}.bmp`, style=`border: 2px solid ${item.bordercolor};`)
        span #{item.name}
  div#resources.container
    each item in resources
      a.bottomlink(href=`${item.path}`)
        img(src=`/img/icons/${item.image}.bmp`, style=`border: 2px solid ${item.bordercolor};`)
        span #{item.name}
